#!/bin/bash
# Use to run configure.sh with a log of output

if [ $SUDO_USER ]; 
then 
	user=$SUDO_USER;echo 
else 
	echo "Must be run as root user!!" 
	exit 1 
fi
currentDir=$(
  cd $(dirname "$0")
  pwd
)
A2DPSOURCE_PATH=$currentDir 
A2DPSOURCE_BACKUP_PATH="$A2DPSOURCE_PATH/backup_files"
cd $A2DPSOURCE_PATH
export A2DPSOURCE_PATH
export A2DPSOURCE_BACKUP_PATH


# Set up file-based logging
exec 1> >(tee configure.log)


exc sudo chmod +x -R $A2DPSOURCE_PATH


run su ${user} -c ./configure.sh
echo "======= Configuration Complete ========"
echo "Reboot to test out the Bluetooth Playback"
